<% include ./partials/header %>

<div class="ui main text container">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segment">
        <div class="ui dividen items">
                <% blogs.forEach((el) => { %>
                    <div class="item">
                        <div class="image">
                            <img src="<%= el.image %>" alt="<%= el.title %> Image">
                        </div>
                        <div class="content">
                            <a class="header" href="/blogs/<%= el._id%>"><%= el.title %></a>
                            <div class="meta">
                                <span><%= moment(el.created).fromNow() %></span>
                            </div>
                            <div class="description">
                                    <% if(el.body && el.body.length > 0) { %>
                                        <p><%- el.body.substring(0,50) %>..</p>
                                    <% } %>
                            </div>
                            <div class="extra">
                                <a class="ui floated violet button" href="/blogs/<%= el._id%>">
                                    Read More
                                </a>
                            </div>
                        </div>  
                    </div>
                <% }) %>
        </div>
    </div>
</div>





<% include ./partials/footer %>