<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item show-margin">
                <img class="ui centered rounded image" src="<%= blog.image %>" alt="<%= blog.title %> Image">
            <div class="content show-margin show-header">
                <div>
                    <a class="ui orange inverted button" href="/blogs/<%= blog._id%>/edit">Edit</a>
                    <form id="delete" action="/blogs/<%= blog._id%>?_method=DELETE" method="POST">
                        <button class="ui red inverted button">Delete</button>
                    </form>
                </div>
                <span><strong><%= moment(blog.created).format("dddd, MMMM Do YYYY") %></strong></span>
            </div>
            <div class="description show-margin">
                <p><%- blog.body %></p>
            </div>
            <div class="show-margin">
                <a class="ui blue inverted button" href="/blogs/">Back to Home</a>
            </div>
        </div>
    </div>   
</div>


<% include ./partials/footer %>